{% extends 'baseAdmin.html.twig' %}

{% block body %}
	{% include "headerAdmin.html.twig" %}
	<div class="container">
		<form class="col-5" method="POST" action="{{ asset('addPhoto') }}" enctype="multipart/form-data">
			<div class="row">
				<div class="custom-file m-2">
					<label for="file" class="form-label">Ajouter une photo :</label>
					<input type="file" class="form-control" id="file" name="file">
				</div>
				<div class="form-group text-right m-2">
					<button class="btn btn-success" name="form[submit]" value="1">Ajouter</button>
				</div>
			</div>
		</form>
		<div class="row justify-content-around">
		{% for photo in photos %}
			<div class="card text-center col-4">
				<img src="{{ asset('asset/img/upload/'~ photo.photo) }}" class="card-img-top" style="height:300px">
				<div class="card-body p-1">
					<a href="{{ path('pics_delete', {'id': photo.id }) }}" class="btn btn-danger">Supprimer</a>	
				</div>
			</div>
		{% endfor %}
		</div>
	</div>
{% endblock %}
