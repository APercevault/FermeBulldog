{% extends 'baseAdmin.html.twig' %}

{% block body %}
	{% include "headerAdmin.html.twig" %}
	<div class="container">
		<form method="POST" action="{{ url('dogs_add_create') }}" enctype="multipart/form-data">
			<h1 class="m-2">Ajouter un chien</h1>

			<label for="category" class="form-label">Catégorie :</label>
			<select id="category" class="form-select mb-2" name="form[category]" aria-label="Default select example">
				{% for category in categories %}
					<option value="{{ category.id }}">{{category.nameCategoryFr}}</option>
				{% endfor %}
			</select>

			<label for="name" class="form-label">Nom :</label>
			<input id="name" name="form[name]" type="text" class="form-control">

			<label for="sex" class="form-label">Sexe</label>
			<select id="sex" class="form-select mb-2" name="form[sex]" aria-label="Default select example">
				<option value="Male">Mâle</option>
				<option value="Femmelle">Femelle</option>
			</select>

			<label for="age" class="form-label">Âge</label>
			<input id="age" name="form[age]" type="number" class="form-control">

			<label for="descriptionFr" class="form-label">Description en Français :</label>
			<textarea id="descriptionFr" name="form[descriptionFr]" id="mytextarea" name="mytextarea"></textarea>

			<label for="descriptionEn" class="form-label">Description en Anglais :</label>
			<textarea id="descriptionEn" name="form[descriptionEn]" id="mytextarea" name="mytextarea"></textarea>

			<div class="custom-file m-2">
				<label for="file" class="form-label">Upload une image :</label>
				<input type="file" class="form-control" id="file" name="file">
			</div>

			<div class="form-group text-right m-2">
				<button class="btn btn-success" name="form[submit]" value="1">Ajouter</button>
			</div>

		</form>
	</div>
{% endblock %}
