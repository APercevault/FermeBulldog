{% extends 'base.html.twig' %}
{% block body %}
	<div class="container-fluid p-0">
		<img class="col-12" src="{{ asset('asset/img/bannerHome.png') }}">
		{% include "header.html.twig" %}
		<div class="container">
			<div class="row mb-3">
				<img class="col-6 p-3" src="{{ asset('asset/img/upload/'~ new.newsImg) }}" style="height:500px">
				<div class="col-6 p-3">
					<h1 class="text-center">{{ new.titlefr|raw}}</h1>
					<h4 class="text-center">Date de l'article :
						{{new.createdAt|date('d-m-y')}}</h4>
					<p class="text-center">{{ new.textfr|raw}}
					</p>
				</div>
			</div>
		</div>
	</div>
	{% include "footer.html.twig" %}
{% endblock %}
