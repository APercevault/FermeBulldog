{% extends 'base.html.twig' %}
{% block body %}
	<div class="container-fluid p-0">
		<img class="col-12" src="{{ asset('asset/img/bannerHome.png') }}">
		{% include "header.html.twig" %}
		<div class="container-fluid">
			<div class="row mb-3">
				{% for content in contents %}
					{% if content.id == 1 %}
						<img class="col-6 p-3" src="{{ asset('asset/img/upload/'~ content.imgFile) }}">
						<div class="col-6 p-3">
							<h1 class="text-center">{{ content.titleFr|raw}}</h1>
							<p class="text-center">{{ content.textFr|raw}}
							</p>
						{% endif %}
					{% endfor %}
					<div class="row">
						<div class="offset-2 col-5">
							<p>
								<i class="fas fa-paw"></i>
								Un suivis journalier</p>
							<p>
								<i class="fas fa-warehouse"></i>
								Un espace de vie propre</p>
							<p>
								<i class="fas fa-lock"></i>
								De la sécurité</p>
						</div>
						<div class="col-5">
							<p>
								<i class="fas fa-dog"></i>
								Une selection</p>
							<p>
								<i class="fas fa-bone"></i>
								Une nourriture équilibré</p>
							<p>
								<i class="fas fa-heart"></i>
								De l'amour</p>
						</div>
					</div>
				</div>
			</div>

			<div class="row justify-content-around p-4 BGColor">
				<div class="col-5">
					{% for content in contents %}
						{% if content.id == 2 %}
							<h2>{{ content.titleFr|raw}}</h2>
							<p>{{ content.textFr|raw}}</p>
						</div>
					{% endif %}
				{% endfor %}
				{% for content in contents %}
					{% if content.id == 3 %}
						<div class="row col-5">
							<h2>{{ content.titleFr|raw}}</h2>
							<img class="col-4" src="{{ asset('asset/img/upload/'~ content.imgFile) }}">
							<div class="col-8">{{ content.textFr|raw}}</div>
						</div>
					</div>
				{% endif %}
			{% endfor %}
		</div>
		<div class="row mt-3">
			<div class="col-4 text-center">
				<img src="{{ asset('asset/img/logo.png') }}" style="width:30%">
			</div>
			<div class="col-4 text-center">
				<h3>CONTACT</h3>
				<p class="text-center">La Ferme du BullDog Exotique</p>
				<p class="text-center">07.77.77.77.77</p>
				<p class="text-center">contact@lafermedubullDogexotique.com</p>
			</div>
			<div class="col-4 text-center">
				<h3>RESEAUX SOCIAUX</h3>
				<i class="fab fa-facebook-square" style="font-size:500%"></i>
				<i class="fab fa-instagram-square" style="font-size:500%"></i>
				<i class="fab fa-twitter-square" style="font-size:500%"></i>
			</div>
		</div>
	</div>
	{% include "footer.html.twig" %}
{% endblock %}
